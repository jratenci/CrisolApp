<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.crisolapp.DiaRuta.DiaRuta">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sincronizar Ruta"
            android:id="@+id/textView"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="#ff000000"
            android:textSize="25dp"
            android:background="#ff45baff"
            android:elegantTextHeight="false"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dia de Ruta"
            android:id="@+id/DiaRutaTextView"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textColor="#ff0a7dff" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lunes"
                android:id="@+id/checkLunes"
                android:layout_gravity="center_horizontal|left"
                android:checked="false"
                android:textSize="20dp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Martes"
                android:id="@+id/checkMartes"
                android:layout_gravity="center_horizontal|left"
                android:checked="false"
                android:textSize="20dp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Miercoles"
                android:id="@+id/checkMiercoles"
                android:layout_gravity="center_horizontal|left"
                android:checked="false"
                android:textSize="20dp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jueves"
                android:id="@+id/checkJueves"
                android:layout_gravity="center_horizontal|left"
                android:checked="false"
                android:textSize="20dp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Viernes"
                android:id="@+id/checkViernes"
                android:layout_gravity="center_horizontal|left"
                android:checked="false"
                android:textSize="20dp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sabado"
                android:id="@+id/checkSabado"
                android:checked="false"
                android:textSize="20dp" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Domingo"
                android:id="@+id/checkDomingo"
                android:layout_gravity="right"
                android:checked="false"
                android:textSize="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Aceptar"
                    android:id="@+id/btnAceptar"
                    android:layout_weight="0.89"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:background="@drawable/botonazul"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:layout_marginTop="20dp" />
            </LinearLayout>

        </RadioGroup>

    </LinearLayout>


</RelativeLayout>
